<%- include('../partials/header') %>

    <div class="section">
        <div class="col s12">
            <h1>
                <%= title %>
            </h1>
            <hr>
            <div class="row">
                <div class="col s12 ">
                    <div class="row edit-input">
                        <form action="/likes/<%= like %>?_method=PUT" method="POST">
                            <div class="input-field col s12">
                                <input placeholder="Edit your comment" id="edit-comment" type="text" class="validate"
                                    name="comment">
                                <label for="edit-coment">Edit Comments</label>
                            </div>
                            <button class="btn waves-effect black add-btn" type="submit">Submit
                                <i class="material-icons white-text right">local_office</i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <a class="white-text" href="/designs/<%= design._id %>">
                <button class="waves-effect black btn-small delete-btn back-btn">
                    <i class="tiny material-icons white-text">arrow_back</i>
                </button>
            </a>
        </div>
    </div>

    <%- include('../partials/footer') %>